extends layout

block content
  

  h1 #{title}

    form(method='POST' action='')
      div.form-container
        label(for='name') Car Body Type: 
        input#name.form-control(type='text', placeholder='Sedan, Convertible, Supercar, etc.' name='name' value=(undefined===carbody? '': carbody.name))
      button.btn-primary(type='submit') Submit
    
    if errors 
      ul 
        for error in errors 
          li!= error.msg 