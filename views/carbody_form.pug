extends layout

block content
  

  h1 #{title}

  form(method='POST' action='')
    div.form-container
      label(for='name') Car Body Type: 
      input(type='text', placeholder='Sedan, Convertible, Supercar, etc.' name='name' value=(undefined===carbody? '': carbody.name))
      label(for='description') Description: 
      input(type='text', placeholder='Descript the car body type' name='description' value=(undefined===carbody? '' : carbody.description))
    button(type='submit') Submit
  
  if errors 
    ul 
      for error in errors 
        li!= error.msg 